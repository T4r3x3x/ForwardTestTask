<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ForwardTestTask.Presentation.Views.EditNoteWindow"
        Title="Edit note">

	<DockPanel Margin="10" >
		<TextBox DockPanel.Dock="Top" Margin="10" HorizontalAlignment="Center"
				 MaxLength="50" Text="{Binding Title}" Watermark="Title"/>
		<TextBox DockPanel.Dock="Top" Margin="10" HorizontalAlignment="Center"
				 MaxWidth="300" MaxLength="500" AcceptsReturn="True"
				 TextWrapping="Wrap" Text="{Binding Description}" Watermark="Description"/>
		<Button DockPanel.Dock="Top" HorizontalAlignment="Center"
	   Command="{Binding SaveChangesCommand}" Content="Save changes"/>
	   <Button DockPanel.Dock="Top" HorizontalAlignment="Center"
	   Content="Cancel" Command="{Binding CancelCommand}"/>
	</DockPanel>
</Window>
